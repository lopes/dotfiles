##
# Intra space commands
#
# switch window focus within space
ctrl + shift - h : yabai -m window --focus west
ctrl + shift - j : yabai -m window --focus north
ctrl + shift - k : yabai -m window --focus south
ctrl + shift - l : yabai -m window --focus east

# swap windows within space
# ctrl + alt - h : yabai -m window --swap west
# ctrl + alt - j : yabai -m window --swap north
# ctrl + alt - k : yabai -m window --swap south
# ctrl + alt - l : yabai -m window --swap east

# move window and split
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - j : yabai -m window --warp north
ctrl + alt - k : yabai -m window --warp south
ctrl + alt - l : yabai -m window --warp east

# misc
ctrl + alt - t : yabai -m window --toggle zoom-fullscreen           # toggle maximize window
ctrl + alt - y : yabai -m window --toggle float --grid 4:4:1:1:2:2  # toogle window flo
ctrl + alt - u : yabai -m space --mirror x-axis                     # flip along x-axisat
ctrl + alt - i : yabai -m space --mirror y-axis                     # flip along y-axis
ctrl + alt - o : yabai -m space --rotate 270                        # rotate layout clockwise
ctrl + alt - p : yabai -m space --balance                           # rebalance windows


##
# Inter space commands
#
# move window to space
ctrl + alt - 1 : yabai -m window --space 1
ctrl + alt - 2 : yabai -m window --space 2
ctrl + alt - 3 : yabai -m window --space 3
ctrl + alt - 4 : yabai -m window --space 4
ctrl + alt - 5 : yabai -m window --space 5
ctrl + alt - 6 : yabai -m window --space 6
ctrl + alt - 7 : yabai -m window --space 7
ctrl + alt - 8 : yabai -m window --space 8
ctrl + alt - 9 : yabai -m window --space 9
ctrl + alt - 0 : yabai -m window --space 10


##
# Service
#
ctrl + alt - r : yabai --restart-service
ctrl + alt - e : yabai --stop-service
ctrl + alt - w : yabai --start-service


##
# Multi displays
#
#change focus between external displays (left and right)
ctrl + shift - 0x2B: yabai -m display --focus west  # less than key
ctrl + shift - 0x2F: yabai -m display --focus east  # greater than key

# move window to display left and right
ctrl + alt - 0x2B: yabai -m window --display west; yabai -m display --focus west
ctrl + alt - 0x2F: yabai -m window --display east; yabai -m display --focus east
