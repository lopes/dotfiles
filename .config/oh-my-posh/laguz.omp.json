{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "powerline",
          "background": "#333238",
          "foreground": "#EFDCF9",
          "template": "\n {{ .Icon }} "
        },
        {
          "type": "shell",
          "style": "powerline",
          "powerline_symbol": "",
          "background": "#434248",
          "foreground": "#EFDCF9",
          "properties": {
            "mapped_shell_names": {
              "bash": "β",
              "cmd": "C",
              "fish": "ƒ",
              "pwsh": "ψ",
              "wsl": "ψ",
              "zsh": "ζ"
            }
          },
          "template": "{{ .Name }} "
        },
        {
          "type": "session",
          "style": "powerline",
          "powerline_symbol": "",
          "background": "#535158",
          "foreground": "#EFDCF9",
          "template": "{{ if .SSHSession }}{{ end }} {{ .UserName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "",
          "background": "#1068bf",
          "foreground": "#EFDCF9",
          "properties": {
            "folder_icon": "",
            "folder_separator_icon": " ❱ ",
            "home_icon": "~",
            "max_depth": 2,
            "style": "agnoster_short"
          },
          "template": "{{ .Path }} "
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "",
          "background": "#ab6100",
          "foreground": "#EFDCF9",
          "properties": {
            "branch_template": "{{ trunc 25 .Branch }}",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": "{{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \ue729{{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uef96 {{ .StashCount }}{{ end }} "
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "status",
          "style": "diamond",
          "foreground": "#EFDCF9",
          "foreground_templates": ["{{ if gt .Code 0 }}#ae1800{{ end }}"],
          "properties": {
            "always_enabled": true
          },
          "template": "{{ if eq .Code 0 }} ❯{{ else }}!❯{{ end }}"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{ .Folder }}",
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#EFDCF9",
    "template": "❯ "
  },
  "final_space": true,
  "version": 3
}
